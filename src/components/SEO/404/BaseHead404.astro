---
import { ClientRouter } from "astro:transitions";

import "../../../styles/global.css";

import Favicons from "@SEO/Favicons.astro";

import GA4 from "@analytics/Google/GA4.astro";
import GTMHead from "@analytics/Google/GTMHead.astro";
import AhrefsAnalytics from "@analytics/Ahrefs/AhrefsAnalytics.astro";
---

<head>
  <GA4 />
  <GTMHead />
  <AhrefsAnalytics />

  <Favicons />
  <ClientRouter />
  {/* Global Metadata */}
  <meta charset="UTF-8" />
  <meta content="IE=edge" http-equiv="X-UA-Compatible" />
  <meta name="format-detection" content="telephone=no" />
  <meta name="referrer" content="no-referrer-when-downgrade" />
  <meta name="robots" content="index, follow" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=yes, shrink-to-fit=no"
  />
  <meta name="generator" content={Astro.generator} />

  {/*FONT PRELOAD*/}
  <link
    rel="preload"
    href="/src/assets/fonts/MuseoModerno-Medium.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  />
  <link
    rel="preload"
    href="/src/assets/fonts/rubik-regular-webfont.woff2"
    as="font"
    type="font/woff2"
    crossorigin
  />

  <link rel="sitemap" href="/sitemap-index.xml" />
  {
    /* TODO:: webmanifest y rss */
    /*
      <link rel="manifest" href="/site.webmanifest" />
      <link
        rel="alternate"
        type="application/rss+xml"
        title={SITE.title}
        href={new URL("rss.xml", Astro.site)}
      />
    */
  }

  <slot />
</head>
