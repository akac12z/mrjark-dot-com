  {siteTitle}
</title>
{/* Icons / Favicon */}
<link
  rel="apple-touch-icon-precomposed"
  sizes="180x180"
  href="/apple-touch-icon.png"
/>
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

{/* Font preloads */}
<link
  rel="preload"
  href="/fonts/MuseoModerno-Medium.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/rubik-regular-webfont.woff2"
  as="font"
  type="font/woff2"
  crossorigin
/>

{/* Canonical URL */}
<link rel="canonical" href={canonicalURL} />

{/* Primary Meta Tags */}
<meta content={siteTitle} name="title" />
<meta content={SITE_DEFAULT_CONFIG.author} name="author" />
<meta content={description} name="description" />

{/* Theme Colour */}
<meta content="" name="theme-color" />

{/* Open Graph / Facebook */}

<meta content={title} property="og:title" />
<meta content={description} property="og:description" />
<meta content={publishDate ? "article" : "website"} property="og:type" />
<meta content={canonicalURL} property="og:url" />
<meta content={SITE_DEFAULT_CONFIG.title} property="og:site_name" />
<meta content={SITE_DEFAULT_CONFIG.location} property="og:locale" />
<meta content={socialImageURL} property="og:image" />
<meta content="1200" property="og:image:width" />
<meta content="630" property="og:image:height" />
{
  publishDate && (
    <>
      <meta content={SITE_DEFAULT_CONFIG.author} property="article:author" />
      <meta content={publishDate} property="article:published_time" />
    </>
  )
}

{/* Twitter */}

<meta content="summary_large_image" property="twitter:card" />

<meta content={canonicalURL} property="twitter:url" />
<meta content={title} property="twitter:title" />
<meta content={description} property="twitter:description" />
<meta content={socialImageURL} property="twitter:image" />


