---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  width: number;
  height: number;
  moreClass?: string;
}

const { alt, height, src, width, moreClass } = Astro.props;
---

<Image
  src={src}
  height={height}
  alt={alt}
  width={width}
  class:list={["h-[160px] w-full rounded-t-lg", { moreClass }]}
/>
