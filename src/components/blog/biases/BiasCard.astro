---
/*inspiración -> https://www.creative-tim.com/twcomponents/component/tailwind-css-cards*/
import BiasImage from "./BiasImage.astro";

interface Props {
  biasName: string;
  createdDate: string;
  description: string;
  tags: string[];
  biasImage: string;
  language: string | string[];
  keywords: string[];
  slug: string;
  lastTimeEdited?: Date;
  relatedLinks?: string[];
  readingTime?: number;
}

const { biasName, description, biasImage, slug } = Astro.props;
---

<section class="w-full flex flex-col items-center justify-center">
  <BiasImage
    width={240}
    height={160}
    src={biasImage}
    alt={`${biasName} imagen`}
  />
  <article
    class="py-2 px-1 w-full rounded-b-lg mx-auto text-center bg-neutral-800"
  >
    <h3 class="text-lg">{biasName}</h3>
    <div class="py-2">
      <p class="mb-4 line-clamp-3">
        {description}
      </p>
      <a
        href=`/blog/biases/${slug}`
        class="mt-4 underline decoration-[#4fe5b8]/50 underline-offset-4"
      >
        Saber más
      </a>
    </div>
  </article>
</section>
