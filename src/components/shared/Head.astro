 * TODO: HACER SITEMAP ->  <link rel="sitemap" href="/sitemap-index.xml" />
 * TODO: HACER MANIFEST -> <link rel="manifest" href="/site.webmanifest" />
 *
 */

import { ViewTransitions } from "astro:transitions";

import Favicons from "./Favicons.astro";

import { SITE_DEFAULT_CONFIG } from "@/global/siteInfo";

interface Props {
  title: string;
  description: string;
  canonicalURL: string;
  author: string;
}

const { title, description, canonicalURL, author } = Astro.props;
---

<head>
  <!-- METATAGS -->
  <meta charset="UTF-8" />
  <meta name={title} content={description} />
  <meta name="author" content={author} />

  <link rel="canonical" href={canonicalURL} />

  <meta name="format-detection" content="telephone=no" />
  <meta name="referrer" content="no-referrer-when-downgrade" />
  <meta name="robots" content="index, follow" />
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=yes, shrink-to-fit=no"
  />
  <meta name="generator" content={Astro.generator} />

  <!-- OPEN GRAPH: GENERAL-->
  <meta property="og:title" content={SITE_DEFAULT_CONFIG.title} />
  <meta property="og:description" content={SITE_DEFAULT_CONFIG.description} />
  <meta property="og:url" content={SITE_DEFAULT_CONFIG.url} />
  <meta property="og:image" content="./public/og-image.png" />
  <meta property="og:type" content="website" />

  <title>{title}</title>

  <Favicons />
  <ViewTransitions />

  <!-- El SLOT ES PARA EL SEO ESPECÃFICO DE CADA UNA DE LAS COLLECTIONS -->
  <slot />
</head>
