---
import "../styles/global.css";

import { SITE_404_CONFIG } from "@/global/siteInfo";

import CourageError404Image from "@imageAssets/OpenGraph/404/og-404-error.png";

import Layout404Error from "@layouts/Layout404Error.astro";
import Page404 from "@/components/pages/404/Page404.astro";
import PageSEO404Error from "@SEO/404/PageSEO404Error.astro";
---

<Layout404Error>
  <PageSEO404Error
    slot="head"
    pageTitle={SITE_404_CONFIG.errorTitle}
    pageDescription={SITE_404_CONFIG.errorDescription}
    pageThumbnail={CourageError404Image.src}
  />
  <Page404 />
</Layout404Error>
