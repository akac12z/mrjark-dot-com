import { PSYCHOLOGY_PAGE_INFO } from "@/global/pagesInfo";
import MainLayout from "@layouts/MainLayout.astro";
import PsychologyPageSEO from "@SEO/pages/psychology/PsychologyPageSEO.astro";

// Provisional
const biases = [
  {
    bias: "Efecto ancla",
    linkTo: "/about",
    premise: "Has pensado alguna vez cómo aprendemos los humanos?",
  },
  {
    bias: "Efecto Backfire sfgdhjklsd aeiudfgakjf asdlufhasl",
    linkTo: "/about",
    premise: "Has pensado alguna vez cómo aprendemos los humanos?",
  },
  {
    bias: "Efecto Marco",
