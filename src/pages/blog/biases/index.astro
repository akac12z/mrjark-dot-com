---
import BiasCard from "@blog/biases/BiasCard.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { getCollection } from "astro:content";

// const biases = await Astro.glob("../../../content/biases/*.md");
const biases = await getCollection("biases");
---

<MainLayout
  title="Lista de sesgos cognitivos"
  subTitle="Una lista donde se muestras los distintos sesgos cognitivos que existen con sus explicaciones, algunos ejemplos y formas en las que los puedes aplicar"
>
  <h1 class="text-xl mb-12">Biases page in porgress</h1>
  <section class="flex justify-center flex-wrap items-center gap-x-3 gap-y-4">
    {
      biases.map((bias) => {
        const { data, slug } = bias;
        const {
          biasImage,
          description,
          biasName,
          createdDate,
          keywords,
          language,
          tags,
        } = data;

        // const actualDate = new Date();
        // const esDate = actualDate.toLocaleDateString("es-ES");
        // // console.log(esDate);

        return (
          <BiasCard
            language="es"
            keywords={["sesgo", "bias"]}
            tags={["sesgo", "bias"]}
            createdDate={createdDate}
            biasName={biasName}
            description={description}
            biasImage={biasImage.src}
            slug={`${slug}`}
          />
        );
      })
    }
    <!-- <BiasCard />
    <BiasCard />
    <BiasCard /> -->
  </section>
</MainLayout>
