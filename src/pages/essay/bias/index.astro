---
import { getCollection } from "astro:content";

import { SITE_DEFAULT_CONFIG } from "@/global/siteInfo";

import MainLayout from "@layouts/MainLayout.astro";
import BiasCard from "@/components/pages/bias/BiasCard.astro";
import MainSEO from "@SEO/pages/MainSEO.astro";

// const bias = await Astro.glob("../../../content/bias/*.md");
const biases = await getCollection("bias");
---

<MainLayout>
  <MainSEO
    slot="head"
    pageTitle=`Sesgos y Heurísticas - ${SITE_DEFAULT_CONFIG.title}`
    pageDescription="Recopilación de sesgos cognitivos y heurísticas de los humanos junto con ejemplos y aplicaciones de los mismos."
  />
  <h1 class="text-xl mb-8">Bias page in porgress</h1>
  <section
    class="grid grid-cols-1 gap-x-2 gap-y-6 sm:gap-x-4 sm:gap-y-8 xs:grid-cols-2 sm:grid-cols-3"
  >
    {
      biases.map((bias) => (
        <BiasCard entry={bias} transition:name={`${bias.slug}-image`} />
      ))
    }
  </section>
</MainLayout>
