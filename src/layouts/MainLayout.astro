---
import ViewTransitions from "astro/components/ViewTransitions.astro";

// import "../styles/dots.css";
import "../styles/global.css";

import Navbar from "@shared/Navbar.astro";
import Footer from "@shared/Footer.astro";

interface Props {
	title: string;
	subTitle?: string;
}

const { title, subTitle = "Blog de mrjark" } = Astro.props;
---

<!doctype html>
<html class="bg-[#0b0b0e]" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name={title} content={subTitle} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<ViewTransitions />
		<title>{title}</title>
	</head>
	<body
		class="mx-auto px-2 pt-2 sm:pt-6 max-w-md sm:max-w-xl md:max-w-2xl max-h-full"
	>
		<Navbar />
		<main class="mt-12">
			<slot />
		</main>
		<!-- <Footer /> -->
	</body>
</html>

<style is:global>
	body {
		background-color: #0b0b0e;
		color: rgb(245, 250, 255);
	}
</style>
