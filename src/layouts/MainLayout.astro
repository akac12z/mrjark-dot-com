---
import "../styles/global.css";

import { SITE_DEFAULT_CONFIG } from "@/global/siteInfo";

import Header from "@shared/Header.astro";

import Footer from "@shared/Footer.astro";
import ScrollToTopBtn from "@/components/pages/shared/ScrollToTopBtn";
import BaseHead from "@SEO/BaseHead.astro";

const { lang } = SITE_DEFAULT_CONFIG;
---

<!doctype html>
<html lang={lang}>
  <BaseHead>
    <slot name="head" />
  </BaseHead>
  <body class="body-layout-classes">
    <Header />
    <main class="mt-5 mb-10 overflow-x-hidden">
      <slot />
      <ScrollToTopBtn client:only="react" />
    </main>
    <Footer />
  </body>
</html>
