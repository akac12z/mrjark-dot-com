---
import "../styles/global.css";

import { SITE_DEFAULT_CONFIG } from "@/global/siteInfo";

import Header from "@shared/Header.astro";

import Footer from "@shared/Footer.astro";
import BaseHead404 from "@SEO/pages/404/BaseHead404.astro";

const { lang } = SITE_DEFAULT_CONFIG;
---

<!doctype html>
<html lang={lang}>
  <BaseHead404>
    <slot name="head" />
  </BaseHead404>
  <body class="mx-auto p-5 px-3 max-w-3xl min-h-screen">
    <Header />
    <main class="my-10 overflow-x-hidden">
      <slot />
    </main>
    <Footer />
  </body>
</html>
