---
import "../styles/global.css";

import { SITE_404_CONFIG } from "@/global/siteInfo";

import BaseHead404 from "@SEO/pages/404/BaseHead404.astro";

const { lang } = SITE_404_CONFIG;
---

<!doctype html>
<html lang={lang}>
  <BaseHead404>
    <slot name="head" />
  </BaseHead404>
  <body class="mx-auto p-5 px-3 max-w-3xl min-h-screen">
    <main class="my-10 overflow-x-hidden">
      <slot />
    </main>
  </body>
</html>
